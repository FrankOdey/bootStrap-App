doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')    
    meta(name='description', content='')  
    meta(name='author', content='Mark Otto, Jacob Thornton, and Bootstrap contributors') 
    meta(name='generator', content='Jekyll v3.8.5')     
    title #{title}: BootStrap &middot; Application
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    link(rel='stylesheet', href='https://getbootstrap.com/docs/4.3/examples/jumbotron/jumbotron.css')
		
  body
    nav.navbar.navbar-expand-md.navbar-dark.fixed-top.bg-dark
      a.navbar-brand(href='#') BootStrapp App.

      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExampleDefault', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarsExampleDefault.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li(class=(title === 'Home' ? 'active' : ''))
            a.nav-link(href='/') Home 
          li(class=(title === 'Services' ? 'active' : ''))
            a.nav-link(href='/services') Services
          li(class=(title === 'About' ? 'active' : ''))
            a.nav-link(href='/about') About Us
          li(class=(title === 'Contact' ? 'active' : ''))
            a.nav-link(href='/contact') Contact Us
        form.form-inline.my-2.my-lg-0
          input.form-control.mr-sm-2(type='text', placeholder='Search', aria-label='Search')
          button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
    
